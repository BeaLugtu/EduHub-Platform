<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="150.0" prefWidth="200.0" styleClass="main-bg" stylesheets="@EduHub.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eduhub.CustomAlertController">
   <children>
      <AnchorPane prefHeight="140.0" prefWidth="190.0" styleClass="secondary-bg" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="140.0" prefWidth="190.0" spacing="15.0">
               <children>
                  <Label fx:id="lblTitle" textFill="GREY">
                     <font>
                        <Font name="Corbel Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblContent" layoutX="105.0" layoutY="45.0" textFill="GREY">
                     <font>
                        <Font name="Corbel" size="12.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnCancel" alignment="CENTER" mnemonicParsing="false" onAction="#handleBtnBack" stylesheets="@CustomAlert.css" textAlignment="CENTER">
                     <font>
                        <Font name="Corbel" size="10.0" />
                     </font>
                     <styleClass>
                        <String fx:value="buttons" />
                        <String fx:value="txt-fill" />
                     </styleClass>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="35.0" top="35.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
